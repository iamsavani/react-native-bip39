{
  "name": "@ns/react-native-bip39",
  "version": "1.1.0",
  "description": "React Native Bitcoin BIP39: Mnemonic code for generating deterministic keys",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "dist/typescript/src/index.d.ts",
  "scripts": {
    "test": "jest",
    "clean": "rm -rf lib/",
    "typecheck": "tsc -P tsconfig.json --noEmit",
    "prepare": "husky install && bob build && cpy wordlists/ lib/ && cpy src/ lib/",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iamsavani/react-native-bip39.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "lint-staged": {
    ".ts": "eslint --fix"
  },
  "keywords": [
    "bip39",
    "mnemonic",
    "react",
    "native"
  ],
  "author": "Nilesh Savani",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iamsavani/react-native-bip39/issues"
  },
  "homepage": "https://github.com/iamsavani/react-native-bip39#readme",
  "devDependencies": {
    "@react-native-community/bob": "^0.17.1",
    "@release-it/conventional-changelog": "^5.1.0",
    "@types/create-hash": "^1.2.2",
    "@types/crypto-js": "^4.1.1",
    "@types/jest": "^28.1.8",
    "@types/react-native": "^0.69.5",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "babel-jest": "^29.0.0",
    "cpy-cli": "^4.2.0",
    "eslint": "^8.22.0",
    "husky": "^8.0.1",
    "jest": "^29.0.0",
    "jest-runner-eslint": "^1.1.0",
    "lint-staged": "^13.0.3",
    "metro-react-native-babel-preset": "^0.72.1",
    "prettier": "^2.7.1",
    "release-it": "^15.4.0",
    "tslint": "^6.1.3",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "create-hash": "^1.2.0",
    "crypto-js": "^4.1.1",
    "react-native": "^0.69.5"
  },
  "react-native": "src/index.ts",
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "copyFlow": true
        }
      ],
      "module",
      "typescript"
    ]
  }
}
